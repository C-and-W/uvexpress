var content ="<%=t.name%>";
        google.maps.event.addListener(marker, 'click', (function(marker, content) {
            return function() {
                infowindow.setContent(content);
                infowindow.open(map, marker);
            }
        })(marker, content));
              }

              var distance = google.maps.geometry.spherical.computeDistanceBetween(coords, new google.maps.LatLng(<%=t.latitude%>,<%=t.longitude%>));
              
              if (distance<=setdis){
                terms.push(["<%=t.id%>","<%=t.name%>","<%= t.runtime %>"]);
                routes.push([{terminal: "<%= t.name %>"},{troutes: []}]);
                <% t.routes.each do |r| %>
                  routes[counter][1].troutes.push([{id:"<%= r.id %>"},{name:"<%= r.name %>"}]);
                <% end %>
                counter = counter + 1;
              }
            <% end %>



            document.getElementById('counter').innerHTML = counter;

            //HERE 

            var $mTable = $("#t-table");
            $mTable.find('tbody').html("");
            for(var i = 0; i < counter; i++) {
              var tempRow = "<tr><td style='height:100%;border-right:none!important;'><div class='td-icon'> </div></td><td class='td-t-name' style='border-left:none!important;'><a class='td-t-link' href=/destinations/<%= @destination.id %>/terminals/"+terms[i][0]+">"+terms[i][1]+"</a>"+"<br>"+terms[i][2]+"</td>";
              tempRow+="<td class='td-t-via'><ul>"
              for(var a = 0; a < routes.length; a++) {
