<p id="notice"><%= notice %></p>

<h1>Listing Terminals</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Name</th>
      <th>Route</th>
      <th>Fare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminals.each do |terminal| %>
      <tr>
        <td><%= terminal.latitude %></td>
        <td><%= terminal.longitude %></td>
        <td><%= terminal.address %></td>
        <td><%= terminal.name %></td>
        <td><%= terminal.route %></td>
        <td><%= terminal.fare %></td>
        <td><%= link_to 'Show', terminal %></td>
        <td><%= link_to 'Edit', edit_terminal_path(terminal) %></td>
        <td><%= link_to 'Destroy', terminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

