<link rel="stylesheet" href="/assets/galarie.theme.css">
<link rel="stylesheet" href="/assets/galarie.min.css">

<div id="body-home">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4" style="background-color:#5388AD; height: 100vh;">
                <div><center><%= image_tag '/assets/main-logo', :style=>"width: 80%; padding-top: 2vh;" %>
                </center></div>
                <div class="">
                    <div class="row" style="margin-top:3vh;">
                        <div class="col-xs-2">
                        <%= image_tag 'location to destination.png', :style => "height: 15vh; margin-left: -20px;"%>
                    </div>
                    <div class="col-xs-8">
                          <center><input id="i-origin" class="i-search" type="text" name="origin" placeholder="SEARCH ORIGIN" value=<%= params['origin'] %>></center>
                      <center><input id="i-destination2" class="i-search" type="text" name="destination" value=<%= params['destination'] %>></center>

                    </div>
                    <div class="col-xs-2" style="padding-top:10px;">
                        <input type="image" src="/assets/reverse.png" alt="Reverse" id="i-reverse1" class="i-reverse" onclick="for_reverse(event);">
                    </div>

                    </div>
                </div>
                <div class="t-td1" style=" margin-left:-4%; font-family: 'Open Sans', sans-serif; font-size: 16px; font-weight: bold; background-color:#E4E2E1; height:10%; width:108%; padding-top:14px;margin-top:4vh;">
                  <center>
                  <span class="st-title"><%= @terminal.name %></span><br>
                  <span class="st-subtitle"><%= @terminal.address %></span>

                  </center>
                </div>
                <div class="t-td1" style=" margin-left:-4%; font-family: 'Open Sans', sans-serif; color: #5388AD; font-size: 16px; font-weight: bold; background-color:white; height:70%; width:108%;">
                <div style="overflow-y:auto;overflow-x:hidden; height:38vh;">
            
                <% @terminal.routes.each do |t| %>
                <div class="row" style="height:12vh; background-color:white;">
                  <div class="col-xs-1"></div>
                  <div style="width:12.5vh; height:100%;background-image:url(/assets/route.png);background-size:cover;background-position:cover; margin-left:20px;" class="col-xs-3">
                    
                  </div>
                  <div style="padding-top:0.9vh;" class="col-xs-8">
                    <span class="ttitle">ROUTE</span><br>
                    <span class="sttitle"><%=t.name%></span><br>
                    <span class="sttitle2"><%=t.fare%></span>
                  </div>
                </div>

                <%end%>

                <div class="row" style="; background-color:white; margin-top:10px;">
                  <div class="col-xs-1"></div>
                  <div style="height:36vh; margin-left:20px;" class="col-xs-10">
                    <div class="galarie items-3">
                    <% (1..3).each do |i| %>
                        <div id="item-<%=i%>" class="control-operator"></div>
                    <% end %>

                    <% (1..3).each do |t| %>
                    <figure class="item">
                      <div style="height:36vh;width:100%;background-color:black;"></div>
                    </figure>
                    <% end %>

                      <div class="controls" style="margin-left:-35%;">
                      <% (1..3).each do |i| %>
                        <a href="#item-<%=i%>" class="control-button">â€¢</a>
                      <% end %>
                      </div>
                    </div>
                  </div>

                </div>


                </div>

                        <input type="image" src="/assets/hamburger-menu-2.png" alt="Menus" id="i-menu2" class="i-menu my_popup_open">
                        </div>
                
                <div id="my_popup">
                    <%= render 'about' %>
                </div>
            </div>

            <div id="map"class="col-md-8" style="min-height: 100vh; background-color: #E4E2E1;">
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

function reverse() {
    var destination = document.getElementById("i-destination2").value;
    var origin = document.getElementById("i-origin").value;
    document.getElementById("i-origin").value = destination;
    document.getElementById("i-destination2").value = origin;
}
</script>