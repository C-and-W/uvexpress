<div id="body-home">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4" style="background-color:#5388AD; height: 100vh;">
                <div><center><%= image_tag 'logo-bluebg', :style=>"width: 100%; padding-top: 3vh;" %></center></div>
                <div class="">
                    <div class="row" style="margin-top:4vh;">
                        <div class="col-xs-2">
                        <%= image_tag 'location to destination.png', :style => "height: 15vh; margin-left: -20px;"%>
                    </div>
                    <div class="col-xs-8">
                      <%= form_for @new_origin, url: {action: "update"}, html: {id: "origin-form"} do |f| %>
                        <center><%= f.text_field :address, id: "i-origin", class: "i-search", placeholder: "SEARCH ORIGIN", onkeypress: "enter(event);" %></center>
                      <% end %>
                      <%= form_for @destination, url: {action: "update"}, html: {id: "origin-destination"} do |f| %>
                        <center><%= f.text_field :address, id: "i-destination2", class: "i-search", value: "#{@destination.address}", onkeypress: "enter_destination(event);" %></center>
                      <% end %>
                    </div>
                    <div class="col-xs-2" style="padding-top:10px;">
                        <input type="image" src="/assets/reverse.png" alt="Reverse" id="i-reverse1" class="i-reverse" onclick="for_reverse(event);">
                    </div>

                    </div>
                </div>
                <div class="t-td1" style=" margin-left:-4%;margin-top: 4vh; font-family: 'Open Sans', sans-serif; color: #5388AD; font-size: 16px; font-weight: bold; background-color:white; height:70%; width:108%; padding-top:30px;">
                <center>There are <span id="counter">0</span> terminals near your location!</center>
                
                    <div id="t-table-wrapper" style="padding-top:15px;margin-left:20px;margin-right:20px;"><center>
                        <table id="t-table" style="width:100%;">
                        <% @terminals.take(5).each do |t| %>
                            <tr>
                                <!-- IROW MO NA LANG TO KESA TABLE-->
                                <td class="td-t-name"><%=link_to t.name, terminal_path(t.id)%><br>5:30 am to 10:00 am</td>
                                <td class="td-t-via">Ayala, Makati via Skyway</td>
                            </tr>
                        <%end%>

                        </table>
                        </center>
                        </div>
                        <input type="image" src="/assets/hamburger-menu-2.png" alt="Menus" id="i-menu2" class="i-menu my_popup_open">
                        </div>
                
                <div id="my_popup">
                    <%= render 'about' %>
                </div>
            </div>

            <div id="map"class="col-md-8" style="min-height: 100vh; background-color: #E4E2E1;">
            </div>
        </div>
    </div>
</div>

<div id="parameters" data-terminal-count="<%= @terminals.count %>">
  
</div>

