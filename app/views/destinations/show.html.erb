                  for(var b = 0; b < routes[a][1].troutes.length; b++){
                    tempRow+="<li class='td-llink'><a class='td-t-link' href=/destinations/<%= @destination.id %>/terminals/"+terms[i][0]+"/routes/"+routes[a][1].troutes[b][0].id+">"+routes[a][1].troutes[b][1].name+"</a></li>"+"<br class='brc'>";
                  }
                  
                  //var hit = routes[a];
                }
              }
              tempRow+="<ul></td>";
              tempRow += "</tr>";
              $mTable.find('tbody').append(tempRow);

              //$mTable.find('tbody').append(convertEntities(tempRow));
            }

   });
 }
}

