<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lat1</th>
      <th>Lat2</th>
      <th>Lon1</th>
      <th>Lon2</th>
      <th>Schedule</th>
      <th>Fare</th>
      <th>Terminal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= route.lat1 %></td>
        <td><%= route.lat2 %></td>
        <td><%= route.lon1 %></td>
        <td><%= route.lon2 %></td>
        <td><%= route.schedule %></td>
        <td><%= route.fare %></td>
        <td><%= route.terminal_id %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

