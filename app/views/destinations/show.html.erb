                  var marker = new google.maps.Marker({
                  position: new google.maps.LatLng( <%=t.latitude%>,<%=t.longitude%>),
                  map: map,
                  title: '',
                  icon:"https://s3.amazonaws.com/uvexpress/t2-b.png",
              });
                }
                else{var marker = new google.maps.Marker({
                  position: new google.maps.LatLng( <%=t.latitude%>,<%=t.longitude%>),
                  map: map,
                  title: '',
                  icon:"https://s3.amazonaws.com/uvexpress/t1-b.png",
              });}
              var distance = google.maps.geometry.spherical.computeDistanceBetween(coords, new google.maps.LatLng(<%=t.latitude%>,<%=t.longitude%>));
              
              console.log(distance);
              if (distance<=setdis){
                terms.push(["<%=t.id%>","<%=t.name%>"]);
                counter = counter + 1;
              }
            <% end %>
            document.getElementById('counter').innerHTML = counter;

            //HERE 

            var $mTable = $("#t-table");
            $mTable.find('tbody').html("");
            for(var i = 0; i < counter; i++) {
              var tempRow = "<tr><td class='td-t-name'>"+terms[i][1]+"</td>";
               tempRow+= "&#60;&#37; Terminal.find("+terms[i][0]+").first.routes.each do |r| &#37;&#62;<td class='td-t-via'>&#60;&#37; r.name &#37;&#62;</td>&#60;&#37; r.name &#37;&#62;</tr>";
              // tempRow += "</tr>";
              //var meh = convertEntities(tempRow);
              $mTable.find('tbody').append(tempRow);
              //$mTable.find('tbody').append(convertEntities(tempRow));
            }

   });
 }
}

